/////////////////////////////////////////////////////////////////////////////////////
// NOTE: You need to be authenticated to DockerHub to use this devcontainer setup.
// The docker image referred below is private.
// docker login -u ingeniisolutions -p (in lastpass)
/////////////////////////////////////////////////////////////////////////////////////

{
  "name": "Ingenii Azure Data Platform",
  "image": "ingeniisolutions/azure-data-platform-iac-runtime:latest",

  // Set *default* container specific settings.json values on container create.
  "settings": {
    "python.pythonPath": "/usr/local/bin/python",
    "python.languageServer": "Pylance",
    "python.formatting.provider": "black",
    "python.formatting.autopep8Path": "/home/vscode/.local/bin/autopep8",
    "python.formatting.blackPath": "/home/vscode/.local/bin/black",
    "python.formatting.yapfPath": "/home/vscode/.local/bin/yapf",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.banditPath": "/home/vscode/.local/bin/bandit",
    "python.linting.flake8Path": "/home/vscode/.local/bin/flake8",
    "python.linting.mypyPath": "/home/vscode/.local/bin/mypy",
    "python.linting.pycodestylePath": "/home/vscode/.local/bin/pycodestyle",
    "python.linting.pydocstylePath": "/home/vscode/.local/bin/pydocstyle",
    "python.linting.pylintPath": "/home/vscode/.local/bin/pylint",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.completeFunctionParens": true,
    "python.autoComplete.showAdvancedMembers": true,
    "python.terminal.activateEnvInCurrentTerminal": true
  },

  // Add the IDs of extensions you want installed when the container is created.
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "coenraads.bracket-pair-colorizer-2",
    "christian-kohler.path-intellisense",
    "gruntfuggly.todo-tree",
    "oderwat.indent-rainbow",
    "redhat.vscode-yaml",
    "geeebe.duplicate",
    "eamodio.gitlens",
    "codezombiech.gitignore",
    "donjayamanne.githistory",
    "mhutchie.git-graph",
    "redvanworkshop.explorer-exclude-vscode-extension",
    "streetsidesoftware.code-spell-checker",
    "yzhang.markdown-all-in-one",
    "hitode909.zentabs",
    "github.copilot"
  ],

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  
  // Install the dev requirements on top of the base image
  "postCreateCommand": "cd src && pip install -r requirements-dev.txt",

  // Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "vscode",
  "features": {
    "git": "os-provided",
  }
}
